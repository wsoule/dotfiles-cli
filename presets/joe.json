{
  "personal": {
    "name": "Joe Developer",
    "email": "joe@example.com",
    "editor": "code"
  },
  "installation": {
    "homebrew": true,
    "brewfile": true,
    "dotfiles": true,
    "macos_defaults": true,
    "npm_packages": true
  },
  "system": {
    "appearance": {
      "dark_mode": false,
      "enable_24_hour_time": false
    },
    "dock": {
      "autohide": false,
      "position": "bottom",
      "tile_size": 64,
      "magnification": true
    },
    "finder": {
      "show_hidden_files": false,
      "default_view": "icon",
      "show_file_extensions": true
    },
    "keyboard": {
      "key_repeat_rate": 3,
      "disable_press_and_hold": false
    },
    "security": {
      "require_password_immediately": false,
      "display_sleep_minutes": 15,
      "computer_sleep_minutes": 60
    },
    "screenshots": {
      "location": "$HOME/Desktop",
      "format": "jpg"
    },
    "menu_bar": {
      "show_battery_percent": false,
      "show_date": false
    },
    "safari": {
      "show_develop_menu": false,
      "default_encoding": "UTF-8"
    }
  },
  "development": {
    "git": {
      "default_branch": "master",
      "pull_rebase": false,
      "push_default": "matching"
    },
    "languages": {
      "node": true,
      "python": false,
      "docker": false,
      "go": false,
      "rust": false,
      "java": false
    },
    "shell": {
      "theme": "oh-my-zsh",
      "terminal_theme": "light",
      "plugins": {
        "autosuggestions": true,
        "syntax_highlighting": false,
        "fzf": false,
        "zoxide": false
      }
    },
    "aliases": {
      "node": true,
      "git": false,
      "docker": false,
      "system": false
    }
  },
  "packages": {
    "extra_brews": ["wget", "curl"],
    "extra_casks": ["chrome", "slack"],
    "extra_taps": [],
    "npm_globals": ["create-react-app", "eslint"]
  },
  "directories": [
    "$HOME/Projects",
    "$HOME/Downloads/Code"
  ],
  "stow_exclusions": [
    "scripts",
    "private",
    ".git"
  ],
  "metadata": {
    "version": "1.0.0",
    "created_at": "2025-01-13T12:00:00Z",
    "last_modified": "2025-01-13T12:00:00Z",
    "created_by": "joe",
    "description": "Simple frontend developer setup focused on React and VS Code"
  }
}